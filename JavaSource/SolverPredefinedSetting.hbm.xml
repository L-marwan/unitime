<hibernate-mapping package="org.unitime.timetable.model">
    <class name="SolverPredefinedSetting" table="solver_predef_setting">
        <cache include="non-lazy" usage="read-write"/>
        <id
            name="uniqueId"
            column="uniqueid"
            type="java.lang.Long">
            <generator class="org.unitime.commons.hibernate.id.UniqueIdGenerator">
                <param name="sequence">solver_predef_setting_seq</param>
            </generator>
        </id>

        <property
            name="name"
            column="name"
            type="java.lang.String"
            not-null="false"
            length="100"/>

        <property
            name="description"
            column="description"
            type="java.lang.String"
            not-null="false"
            length="1000"/>

        <property
            name="appearance"
            column="appearance"
            type="java.lang.Integer"
            not-null="false"
            length="2"/>

        <set
            name="parameters"
            cascade="all"
            inverse="false"
            table="solver_parameter">

            <cache include="non-lazy" usage="read-write"/>
            <key column="solver_predef_setting_id" foreign-key="fk_solver_param_predef"/>
            <one-to-many class="SolverParameter"/>
        </set>

    </class>
</hibernate-mapping>
